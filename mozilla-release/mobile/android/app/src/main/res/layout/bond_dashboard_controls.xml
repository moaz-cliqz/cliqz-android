<org.mozilla.gecko.widget.themed.ThemedLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bond_dashboard_controls"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bond_background"
    android:orientation="horizontal"
    android:paddingTop="@dimen/padding_16"
    android:paddingBottom="@dimen/padding_16">

    <org.mozilla.gecko.widget.themed.ThemedTextView
        android:id="@+id/bond_dashboard_state_button"
        style="@style/bond_dashboard_controls_title"
        android:drawableTop="@drawable/bond_pause"
        android:text="@string/bond_dashboard_contols_pause" />

    <org.mozilla.gecko.widget.themed.ThemedTextView
        android:id="@+id/bond_dashboard_vpn_button"
        style="@style/bond_dashboard_controls_title"
        android:drawableTop="@drawable/bond_vpn_on"
        android:text="@string/bond_dashboard_contols_vpn" />

    <org.mozilla.gecko.widget.themed.ThemedTextView
        android:id="@+id/bond_dashboard_clear_button"
        style="@style/bond_dashboard_controls_title"
        android:drawableTop="@drawable/bond_clear"
        android:text="@string/bond_dashboard_contols_clear" />

</org.mozilla.gecko.widget.themed.ThemedLinearLayout>