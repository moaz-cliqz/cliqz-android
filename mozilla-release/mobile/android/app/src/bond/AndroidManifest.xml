<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="org.mozilla.gecko">

    <application tools:ignore="GoogleAppIndexingWarning">

        <activity
            android:name="org.mozilla.gecko.vpn.DisconnectVPN"
            android:excludeFromRecents="true"
            android:noHistory="true"
            android:taskAffinity=".DisconnectVPN"/>

        <service
            android:name="org.mozilla.gecko.vpn.core.OpenVPNService"
            android:permission="android.permission.BIND_VPN_SERVICE"
            android:process=":openvpn">
            <intent-filter>
                <action android:name="android.net.VpnService" />
            </intent-filter>
        </service>

        <service
            android:name="org.mozilla.gecko.vpn.api.ExternalOpenVPNService"
            android:process=":openvpn"
            tools:ignore="ExportedService">
            <intent-filter>
                <action android:name="org.mozilla.gecko.vpn.api.IOpenVPNAPIService" />
            </intent-filter>
        </service>
        <service
            android:name="org.mozilla.gecko.vpn.core.OpenVPNStatusService"
            android:exported="false"
            android:process=":openvpn" />
    </application>
</manifest>
