<org.mozilla.gecko.widget.themed.ThemedLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/dashboard_item_layout"
    android:background="@drawable/dashboard_item_background"
    android:orientation="vertical"
    android:padding="@dimen/padding_10">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/padding_10"
        android:layout_marginTop="@dimen/padding_10"
        android:gravity="center">

        <ImageView
            android:id="@+id/item_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            app:srcCompat="@drawable/ic_time_circle" />

        <org.mozilla.gecko.widget.themed.ThemedTextView
            android:id="@+id/item_measurement"
            style="@style/dashboard_measurement_value"
            android:layout_centerInParent="true"
            tools:text="225 \nMIN" />

    </RelativeLayout>

    <org.mozilla.gecko.widget.themed.ThemedTextView
        android:id="@+id/item_title"
        style="@style/dashboard_item_title"
        tools:text="Item Title" />

    <org.mozilla.gecko.widget.themed.ThemedTextView
        android:id="@+id/item_content"
        style="@style/dashboard_item_content"
        tools:text="Item content is written here" />

</org.mozilla.gecko.widget.themed.ThemedLinearLayout>